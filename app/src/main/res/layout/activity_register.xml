<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_register"
        android:layout_width="334dp"
        android:layout_height="598dp"
        app:cardBackgroundColor="@color/deep_blue"
        app:cardCornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/edit_text_confirm_password"
                android:layout_width="245dp"
                android:layout_height="46dp"
                android:layout_marginTop="20dp"
                android:background="@null"
                android:drawableLeft="@drawable/ic_baseline_security_24"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="Confirm password"
                android:inputType="textVisiblePassword"
                android:padding="10dp"
                android:textColor="#FFFFFF"
                android:textColorHighlight="#03A9F4"
                android:textColorHint="#FFFFFF"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edit_text_password" />

            <EditText
                android:id="@+id/edit_text_password"
                android:layout_width="245dp"
                android:layout_height="46dp"
                android:layout_marginTop="20dp"
                android:background="@null"
                android:drawableLeft="@drawable/ic_baseline_security_24"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="Password"
                android:inputType="textVisiblePassword"
                android:padding="10dp"
                android:textColor="#FFFFFF"
                android:textColorHighlight="#03A9F4"
                android:textColorHint="#FFFFFF"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edit_text_email_register" />

            <TextView
                android:id="@+id/text_view_basic_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="sans-serif"
                android:text="Basic Details"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textview_register" />

            <EditText
                android:id="@+id/edit_text_email_register"
                android:layout_width="245dp"
                android:layout_height="46dp"
                android:layout_marginTop="20dp"
                android:background="@null"
                android:drawableLeft="@android:drawable/ic_dialog_email"
                android:drawablePadding="20dp"
                android:ems="10"
                android:hint="Email address"
                android:inputType="textEmailAddress"
                android:padding="10dp"
                android:textColor="#FFFFFF"
                android:textColorHighlight="#03A9F4"
                android:textColorHint="#FFFFFF"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edit_text_contact_number" />

            <EditText
                android:id="@+id/edit_text_contact_number"
                android:layout_width="245dp"
                android:layout_height="46dp"
                android:layout_marginTop="20dp"
                android:background="@null"
                android:drawableLeft="@drawable/ic_baseline_call_24"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="Contact number"
                android:inputType="phone"
                android:padding="10dp"
                android:textColor="#FFFFFF"
                android:textColorHighlight="#03A9F4"
                android:textColorHint="#FFFFFF"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edit_text_full_name" />

            <EditText
                android:id="@+id/edit_text_full_name"
                android:layout_width="245dp"
                android:layout_height="46dp"
                android:layout_marginTop="20dp"
                android:background="@null"
                android:drawableLeft="@drawable/ic_person"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="Full name"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:textColor="#FFFFFF"
                android:textColorHighlight="#03A9F4"
                android:textColorHint="#FFFFFF"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_view_basic_details" />

            <TextView
                android:id="@+id/textview_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="sans-serif"
                android:text="Register"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="146dp"
                android:layout_height="33dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="16dp"
                android:background="@null"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edit_text_confirm_password" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="18dp"
                android:fontFamily="sans-serif"
                android:padding="10dp"
                android:text="Registering as?"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edit_text_confirm_password" />


            <Button
                android:id="@+id/button_register_next"
                android:layout_width="118dp"
                android:layout_height="33dp"
                android:layout_marginTop="100dp"
                android:background="@drawable/button2"
                android:fontFamily="@font/playfair_display"
                android:text="Next"
                android:textColor="@color/black"
                android:textSize="12sp"
                app:backgroundTint="#FFFFFF"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.486"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edit_text_confirm_password" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>